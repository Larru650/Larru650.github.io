{
  "semi": true,
  "trailingComma": "none",
  "singleQuote": true,
  "printWidth": 120,
  "jsxBracketSameLine": true,
  "bracketSpacing": true,
  "arrowParens": "always",
  "tabWidth": 2,
  "overrides": [
    {
      "files": "*.ps1",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.sh",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.yaml",
      "options": {
        "singleQuote": false
      }
    }
  ]
}
